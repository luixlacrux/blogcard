.Content
  display flex
  flex-wrap wrap
  justify-content center
  padding-top 1rem
  border-top .1px rgba(gris, .3) solid
  margin-bottom 2rem
  
  &-article
    margin-bottom 6%
    width 100%
    background white
    overflow hidden
    box-shadow 0px 0px 3px rgba(negro, .5)
    position relative
    .header
      position relative
      height 60vw
      min-height 150px
      max-height 270px
      background negro
      img
        width 100%
        height 100%
        -webkit-filter brightness(0.8) contrast(1.1)
      
      .title
      .date
        position: absolute
        bottom 1rem
        left 1rem
        right 1rem
        color #fafafa
        font-weight 300
        text-shadow 1px 1px 5px negro
        a
          font-weight 400
          display block
          margin-bottom .2rem
          color white
          text-decoration none
    .card
      overflow hidden
      display none
      height calc(60vw - 2rem)
      min-height calc(150px - 2rem)
      max-height calc(270px - 2rem)
      padding 1rem
      background white
      z-index 2
      position absolute
      top 0
      .title
        margin 0
        a
          font-weight 400
          text-decoration none
          color rgba(negro, .7)
      .date
        font-weight 300
        display block
        margin-top .5rem
        color gris
        
      .stract
        font-weight 300
        margin-top 1.5rem
        color negro_claro
        
    .bottom
      outline none
      border-top 1px gris solid
      height calc(70px - 2rem)
      display flex
      align-items center
      position relative
      padding 1rem
      
      .like
        display flex
        flex-direction column
        justify-content center
        align-items center
        color white
        background gris
        border none
        position absolute
        outline none
        right 5%
        width 50px
        height 50px
        top -30px
        border-radius 50%
        text-shadow 1px 1px 4px rgba(negro_claro, .5)
        z-index 3
        &.liked
          background rosa
        .icon-up
          border-left 8px transparent solid
          border-bottom 10px white solid
          border-right 8px transparent  solid
          margin-bottom .2rem
          
      .profile
        margin 0
        padding 0
        img
          width 40px
          height 40px
          border-radius 50%
      .data
        margin-left .4rem
        .author
          text-decoration none
          color azul_link
        .tag
          display block
          
@media screen and (min-width: 500px)
  .Content
    &-article
      margin 1.5%
      //margin-bottom 6%
      width 30%
      min-width 350px
      max-width 350px
      .header
        height 60vw
        min-height 150px
        max-height 300px
      .card
        max-height calc(300px - 2rem)
            
        
        
        